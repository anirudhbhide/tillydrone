= person_form_for("basic information") do |form|
  %p.field
    = form.label :name
    %br
    = form.text_field :name

  %p.field
    = form.label :date_of_birth
    %br
    = form.text_field :date_of_birth
  
  %p.field
    = form.label :date_of_birth_confirmed
    %br
    = form.check_box :date_of_birth_confirmed

  %p.field
    %label
      = form.radio_button :gender, 'Female'
      Female
    %label
      = form.radio_button :gender, 'Male'
      Male

  %p.field
    = form.label :religion
    %br
    = form.text_field :religion