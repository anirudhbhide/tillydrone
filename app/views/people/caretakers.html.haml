= person_section_header("caretakers")
.people
  %ul
    - @person.caretakers.each do |caretaker|
      %li[caretaker]
        = button_to "Remove", { :controller => 'people', :action => 'remove_caretaker', :id => @person.id, :caretaker_id => caretaker.id }, :confirm => "Are you sure you want to remove #{caretaker.name} as a caretaker from #{@person.name}?", :method => :delete
        = render :partial => "people/person", :locals => {:person => caretaker, :relationship => @person.relationship_with(caretaker)}

  = render :partial => 'add_relationship', :locals => {:relationship => 'caretaker', :path => add_caretaker_person_path(@person)}

  %p= link_to "Back", @person
