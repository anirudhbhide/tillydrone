= person_section_header("caretakers")
%ul.people
  - @person.caretakers.each do |caretaker|
    %li[caretaker]
      = render :partial => "people/person", :locals => {:person => caretaker}
      = button_to "Remove", { :controller => 'people', :action => 'remove_caretaker', :id => @person.id, :caretaker_id => caretaker.id }, :confirm => "Are you sure you want to remove #{caretaker.name} as a caretaker from #{@person.name}?", :method => :delete
      .relationship_type= @person.caretaker_relationship(caretaker)

- form_tag add_caretaker_person_path(@person), :method => :post, :id => "add_caretaker" do
  = label_tag 'Caretaker'
  = select_tag :person_id, options_from_collection_for_select(Person.all, :id, :name_and_village)
  %br
  = label_tag 'Relationship'
  = text_field_tag :relationship_type
  %br
  = submit_tag "Add caretaker"