!!!
%html
  %head
    %title Children's Future International - Students Records
    = formtastic_stylesheet_link_tag
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    
    = javascript_include_tag :jelly, *application_jelly_files
    = spread_jelly
    = javascript_include_tag 'ajaxDelete', 'lib/jquery.form'

    
  %body{:class => "#{controller.controller_name}-section #{controller.action_name}-page"}
    #wrapper
      #header
        .site
          %h1 Children's Future International
          %h2 Student Records

      %ul#menu
        .site
          %li= link_to 'people', people_path
          %li= link_to 'courses', courses_path
          %li= link_to 'villages', villages_path
          %li= link_to 'admin', admin_path

      #content 
        %p.notice= flash[:notice]
        %p.alert= flash[:alert]
        %p.error= flash[:error]
        .site
          = yield
      #footer

